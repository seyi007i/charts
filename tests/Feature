<?php

namespace Tests\Feature;

use Illuminate\Foundation\Testing\RefreshDatabase;
use Tests\TestCase;

class JobControllerTest extends TestCase
{
    use RefreshDatabase;

    /** @test */
    public function it_can_trigger_a_job()
    {
        $response = $this->postJson('/trigger-job');

        $response->assertStatus(200);
        $response->assertJson(['status' => 'Job dispatched']);
    }
}